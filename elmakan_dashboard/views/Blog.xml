<odoo>
    <data>
        <record model="ir.ui.view" id="blog_almakan_list_view">
            <field name="name">blog new List</field>
            <field name="model">blog.almakan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title"/>
                    <field name="slug"/>
                    <field name="tag"/>
                </tree>
            </field>
        </record>




        <record id="blog_almakan_form_view" model="ir.ui.view">
            <field name="name">blog new form</field>
            <field name="model">blog.almakan</field>
            <field name="arch" type="xml">
                <form string="blog new">
                    <sheet>
                        <group>
                            <field name="image"/>
                            <field name="image_url"/>
                            
                        </group>

                        <group>
                            <field name="title"/>
                            <field name="slug"/>
                            <field name="tag"/>
                        </group>
                        <group>
                            <field name="content"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="blog_almakan_action_window">
            <field name="name">blog new</field>
            <field name="res_model">blog.almakan</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                    <p class="o_view_nocontent_smiling_face">
                        Create your first blog Record!
                    </p>
            </field>
        </record>

        
        <menuitem id="blog_almakan" name="Blog" sequence="39" parent="almakaan_root"
            action="blog_almakan_action_window" />
        
        

    </data>
</odoo>